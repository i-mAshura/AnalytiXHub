# OPENCHAIN IR v3.0 Configuration

# ==================== BLOCKCHAIN APIs ====================
ETHERSCAN_API_KEY=your_etherscan_api_key_here
# Get from: https://etherscan.io/apis (FREE - 5M calls/day)

# BlockScout - NO KEY NEEDED (free public API)
BLOCKSCOUT_ENABLED=true

# ==================== DATABASE ====================
# Local PostgreSQL (default setup)
DATABASE_URL=postgresql://postgres:password@localhost:5432/openchain_ir

# Cloud alternatives (uncomment to use):
# Azure PostgreSQL: postgresql://username@servername:password@servername.postgres.database.azure.com:5432/openchain_ir
# AWS RDS PostgreSQL: postgresql://username:password@rdsinstance.region.rds.amazonaws.com:5432/openchain_ir
# Heroku Postgres: postgresql://username:password@hostname:5432/dbname
# Supabase: postgresql://postgres:password@project.supabase.co:5432/postgres

# ==================== CACHING & JOBS ====================
# Local Redis (default)
REDIS_URL=redis://localhost:6379/0

# Cloud alternatives:
# Redis Cloud: redis://:password@hostname:port
# AWS ElastiCache: redis://hostname:6379/0

# ==================== GOOGLE GEMINI API (Optional) ====================
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# ==================== FLASK APP ====================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here_change_in_production

# ==================== BLOCKCHAIN.COM (Optional, for free Bitcoin API) ====================
# BLOCKCHAIN_COM_API_KEY=your_blockchain_com_key  # Optional, API is free without key

# ==================== THREAT INTELLIGENCE ====================
# FREE sources enabled by default (OFAC list, Etherscan labels)
THREAT_INTELLIGENCE_ENABLED=true
# Optional: Paid threat intel services
# CHAINALYSIS_API_KEY=your_key_here
# TRM_LABS_API_KEY=your_key_here

# ==================== FEATURE FLAGS ====================
ENABLE_MULTI_CHAIN=true
ENABLE_SMART_CONTRACT_ANALYSIS=true
ENABLE_THREAT_INTELLIGENCE=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_TAINT_ANALYSIS=true
ENABLE_ML_ANOMALY=true
ENABLE_BATCH_PROCESSING=true
ENABLE_DEX_INTEGRATION=true
ENABLE_CLUSTERING=true

# ==================== CELERY (Background Jobs) ====================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# ==================== REAL-TIME MONITORING ====================
# Update interval in seconds
MONITORING_UPDATE_INTERVAL=60
MONITORING_MAX_ADDRESSES=10
# Alert thresholds
ALERT_RISK_THRESHOLD=0.75
ALERT_ANOMALY_THRESHOLD=0.8
MONITORING_CHECK_INTERVAL=300  # seconds (5 minutes)

# ==================== BATCH PROCESSING ====================
BATCH_MAX_ADDRESSES=100
BATCH_WORKERS=4

# ==================== SMART CONTRACT ANALYSIS ====================
SLITHER_ENABLED=true

# ==================== DEX INTEGRATION ====================
# Public APIs - no keys needed
UNISWAP_GRAPH_URL=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3
AAVE_GRAPH_URL=https://api.thegraph.com/subgraphs/name/aave/protocol-v3

# ==================== SYSTEM ====================
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
MAX_RETRIES=3
